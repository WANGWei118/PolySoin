<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--    <item name="colorPrimary">?themePrimary</item>
            <item name="colorPrimaryDark">?themePrimaryDark</item>
            <item name="colorAccent">?themeAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Indigo" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--   <item name="themeContentBackground">@color/white</item>
           <item name="themeContentTextColor">@color/black</item>
           <item name="themeContentTextColoOnPrimary">@color/white</item>-->
    </style>

    <style name="AppTheme.Dark" parent="AppTheme.NoActionBar">
        <item name="themePrimary">@color/dark</item>
        <item name="themePrimaryDark">@color/dark</item>
        <item name="themeAccent">@color/dark</item>
        <!--   <item name="themeContentBackground">@color/white</item>
           <item name="themeContentTextColor">@color/black</item>
           <item name="themeContentTextColoOnPrimary">@color/white</item>-->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

</resources>
