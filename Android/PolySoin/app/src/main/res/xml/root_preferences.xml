<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="auto_night_mode"
            app:summary="@string/attachment_summary__auto_enable_night_mode"
            app:title="@string/enable_auto_night_mode"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="enable_night_mode"
            app:summary="@string/attachment_summary_enable_night_mode"
            app:title="@string/enable_night_mode"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
